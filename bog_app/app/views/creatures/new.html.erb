<div class="col-md-8 col-md-offset-4">
  <%= form_for :creature,  url: "/creatures", method: "post", :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
    <legend>Creature Registration</legend>
    <div class="form-group">
      <div class="col-md-6">
        <%= f.label :name, "name:"%>
        <%= f.text_field :name, class: "form-control", require: "true" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-6">
        <%= f.label :description, "description:", class: "control-label" %>
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

      <div class="form-group">
        <div class="col-md-6">
          <%= f.submit "Save Creature", class: "btn btn-success btn-block" %>
        </div>
      </div>
  </fieldset>
  <% end %>
</div>
