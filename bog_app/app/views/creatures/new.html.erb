<div class="col-md-8 col-md-offset-4">
    <%= form_for @creature, :html => {:class => "form-horizontal"} do |f| %>
    <fieldset>

      <div class="form-group">
        <div class="col-md-6">
          <legend>Add New Creature</legend>
          <%= f.label :name, "creature name:" %>
          <%= f.text_field :name, class: "form-control", required: "true" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-6">
        <%= f.label :description, "description" %>
          <%= f.text_area :description, class: "form-control", required: "true" %> <br>
          <%= f.submit "save creature", class: "btn btn-success btn-xs btn-block" %>
        </div>
      </div>

      </fieldset>
    <% end %>
</div>
